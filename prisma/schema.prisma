// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-kysely"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Define the User table
model User {
  id        Int      @id @default(autoincrement())
  handle  String   @unique
  threads   Thread[] @relation("user_threads")
  posts     Post[]   @relation("user_posts")
}

// Define the Board table
model Board {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  threads Thread[] @relation("board_threads")
}

// Define the Thread table
model Thread {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now())
  userId    Int
  boardId   Int
  user      User     @relation("user_threads", fields: [userId], references: [id])
  board     Board    @relation("board_threads", fields: [boardId], references: [id])
  posts     Post[]   @relation("thread_posts")
}

// Define the Post table
model Post {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  userId    Int
  threadId  Int
  user      User     @relation("user_posts", fields: [userId], references: [id])
  thread    Thread   @relation("thread_posts", fields: [threadId], references: [id])
}
